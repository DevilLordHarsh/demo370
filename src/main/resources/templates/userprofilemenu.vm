  <h1>Tickets history</h1>

    #if($tickets_history)

    <div class="ticket_container">

        <table style="width:80%">
            <tr><th>#</th><th>Destination</th><th>Departure</th><th>Flight Date</th><th>Airplane</th><th>Credit Card Number</th><th>Ticket Price in $</th><th>Ticket Status</th></th>
        #foreach($ticket in $tickets_history )
            <tr><td>$foreach.count</td><td>$ticket[0]</td><td>$ticket[1]</td><td>$ticket[2]</td><td>$ticket[3]</td><td>$ticket[4]</td><td>$ticket[5]</td><td>$ticket[6]</td></tr>
        #end
        </table>

    #else
        <font size="5">No tickets history!</font>
    #end

    </div>